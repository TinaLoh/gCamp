<% if notice %>
<div id="notice" class="alert alert-success text-center" role="alert"><%= notice %></div>
<% end %>

<div class="page-header">
  <div class="pull-right">
    <%= link_to 'New User', new_user_path, class:"btn btn-info"%>
  </div>
  <h1>Users</h1>
</div>

<table class = "table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan = "3"></th>
    </tr>
  </thead>

  <tbody>

    <% @users.each do |user| %>
    <tr>
      <td><u><%= link_to (user.first_name + " " << user.last_name), user_path(user)%></u></td>
      <td><u><%= mail_to user.email %></u></td>
      <td><u><%= link_to 'Edit', edit_user_path(user)%></u></td>
    </tr>
    <% end %>
  </tbody>
</table>
