<h1>Edit User</h1>

<br>

<%= form_for(@user, :html => { :class => 'form-horizontal' }) do |f| %>

<div class="form-group">
  <%= f.label :first_name, class: "col-sm-2 control-label" %>
  <div class="col-sm-5">
    <%= f.text_field :first_name, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :last_name, class: "col-sm-2 control-label" %>
  <div class="col-sm-5">
    <%= f.text_field :last_name, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :email, class: "col-sm-2 control-label" %>
  <div class="col-sm-5">
    <%= f.email_field :email, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit  class:"btn btn-primary" %>
    <%= link_to "cancel", users_path, class:"btn btn-default"%>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-5 well">
  <p class="text-center"><%= link_to "Delete User", user_path(@user), method: :delete, data:{ confirm: "Are you sure?"}, class:"btn btn-danger" %></p>
  </div>
</div>

<% end %>
