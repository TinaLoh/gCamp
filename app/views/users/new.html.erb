<div class="page-header">
<h1>New User</h1>
</div>

<%= form_for(@user, :html => { :class => 'form-horizontal' }) do |f| %>

<div class="form-group">
  <%= f.label :first_name, class: "col-sm-1 control-label" %>
  <div class="col-sm-5">
    <%= f.text_field :first_name, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :last_name, class: "col-sm-1 control-label" %>
  <div class="col-sm-5">
    <%= f.text_field :last_name, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :email, class: "col-sm-1 control-label" %>
  <div class="col-sm-3">
    <%= f.date_field :email, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-1 col-sm-11">
    <%= f.submit  class:"btn btn-primary" %>
    <%= link_to "cancel", tasks_path, class:"btn btn-default"%>
  </div>
</div>

<% end %>
