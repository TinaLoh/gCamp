<div class="page-header">
  <div class="pull-right">
    <% if params[:complete] == "false" %>
    <%= link_to 'All', tasks_path %>  &nbsp; | &nbsp; Incomplete
    <% else %>
    All | <%= link_to 'Incomplete', tasks_path(:complete=>"false") %>
    &nbsp;
    <% end %>
    &nbsp; <%= link_to 'New Task', new_task_path, class:"btn btn-info" %>
  </div>
  <h1>Tasks</h1>
</div>

<table class = "table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Complete</th>
      <th>Due Date</th>
      <th colspan = "3"></th>
    </tr>
  </thead>

  <tbody>

    <% @tasks.each do |task| %>
    <tr>
      <td><%= task.description %></td>
      <td><%= task.complete %></td>
      <td><%= task.due_date %></td>
      <td><%= link_to 'Show', task, class:"btn btn-success" %></td>
      <td><%= link_to 'Edit', edit_task_path(task), class:"btn btn-info" %></td>
      <td><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
