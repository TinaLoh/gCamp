<%= form_for(@task, :html => { :class => 'form-horizontal' }) do |f| %>
<% if @task.errors.any? %>
<div id="error_explanation" class="alert alert-success col-sm-offset-2">
  <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

  <ul>
    <% @task.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group">
  <%= f.label :description, class: "col-sm-1 control-label" %>
  <div class="col-sm-5">
    <%= f.text_field :description, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :due_date, class: "col-sm-1 control-label" %>
  <div class="col-sm-3">
    <%= f.date_field :due_date, class: "form-control" %>
  </div>
</div>


<div class="form-group">
  <div class="col-sm-offset-1 col-sm-11">
    <div class="checkbox">
      <label>
        <%= f.check_box :completed %>
        <%= f.label :completed %>
      </label>  
    </div>
  </div>
</div>


<div class="form-group">
  <div class="col-sm-offset-1 col-sm-11">
    <%= f.submit  class:"btn btn-primary" %>
    <%= link_to "cancel", tasks_path, class:"btn btn-default"%>
  </div>
</div>

<% end %>
